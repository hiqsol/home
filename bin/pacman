#!/bin/sh
# https://gist.github.com/cirrusUK/9494694

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
 esc=""

  color0="${esc}[30m"; # Foreground BLACK
  color1="${esc}[31m"; # Foreground RED
  color2="${esc}[32m"; # Foreground GREEN
  color3="${esc}[33m"; # Foreground YELLOW
  color4="${esc}[34m"; # Foreground BLUE
  color5="${esc}[35m"; # Foreground PURPLE
  color6="${esc}[36m"; # Foreground CYAN
  color7="${esc}[37m"; # Foreground WHITE

  blackb="${esc}[40m";
  redb="${esc}[41m";
  greenb="${esc}[42m";
  yellowb="${esc}[43m";
  blueb="${esc}[44m";
  purpleb="${esc}[45m";
  cyanb="${esc}[46m";
  whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

initializeANSI

c1() { echo -n " $1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  "; }
c2() { echo -n " $1â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–€ "; }
c3() { echo -n " $1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€     "; }
c4() { echo -n " $1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„     "; }
c5() { echo -n " $1â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„ "; }
c6() { echo -n " $1  â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€  "; }

p1() { echo -n " $1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„   "; }
p2() { echo -n " $1â–„${color7}â–ˆâ–€â–ˆ$1â–ˆâ–ˆ${color7}â–ˆâ–€â–ˆ$1â–ˆâ–ˆâ–„ "; }
p3() { echo -n " $1â–ˆ${color7}â–„â–„â–ˆ$1â–ˆâ–ˆ${color7}â–„â–„â–ˆ$1â–ˆâ–ˆâ–ˆ "; }
p4() { echo -n " $1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ "; }
p5() { echo -n " $1â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ "; }
p6() { echo -n " $1â–€   â–€  â–€   â–€ "; }

echo "    BLACK          RED          GREEN         YELLOW         BLUE         PURPLE         CYAN "
p1 $color0;p1 $color1;p1 $color2;c1 $color3;p1 $color4;p1 $color5;p1 $color6;echo
p2 $color0;p2 $color1;p2 $color2;c2 $color3;p2 $color4;p2 $color5;p2 $color6;echo
p3 $color0;p3 $color1;p3 $color2;c3 $color3;p3 $color4;p3 $color5;p3 $color6;echo
p4 $color0;p4 $color1;p4 $color2;c4 $color3;p4 $color4;p4 $color5;p4 $color6;echo
p5 $color0;p5 $color1;p5 $color2;c5 $color3;p5 $color4;p5 $color5;p5 $color6;echo
p6 $color0;p6 $color1;p6 $color2;c6 $color3;p6 $color4;p6 $color5;p6 $color6;echo
echo -n $color0 $boldon;
echo "    color0        color1        color2        color3       color4        color5        color6"
p1 $color0;p1 $color1;p1 $color2;c1 $color3;p1 $color4;p1 $color5;p1 $color6;echo
p2 $color0;p2 $color1;p2 $color2;c2 $color3;p2 $color4;p2 $color5;p2 $color6;echo
p3 $color0;p3 $color1;p3 $color2;c3 $color3;p3 $color4;p3 $color5;p3 $color6;echo
p4 $color0;p4 $color1;p4 $color2;c4 $color3;p4 $color4;p4 $color5;p4 $color6;echo
p5 $color0;p5 $color1;p5 $color2;c5 $color3;p5 $color4;p5 $color5;p5 $color6;echo
p6 $color0;p6 $color1;p6 $color2;c6 $color3;p6 $color4;p6 $color5;p6 $color6;echo
